<% provide(:title, 'Create Subject') %>
<h1>Create Subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subject) do |f|  %>
      <%= render partial: 'shared/error_messages', :locals => {:obj => @subject} %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.submit "Create Subject", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>